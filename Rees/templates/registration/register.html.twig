{% extends 'base.html.twig' %}
{% block title %}Series index{% endblock %}
{% block stylesheets %}
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        <link href="{{ asset('/css/login.css') }}" type="text/css" rel="stylesheet">  
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
{% endblock %}

{% block body %}
    {{ parent() }}
        <main class="text-center w-100 m-auto form-signin">
        <div class="row align-items-center boxShadowRegister">
            <h1 class="h3 mb-3 font-weight-normal text-light">Please register</h1>
            <form method="post" class = "text-white ">
                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.name,  { 
                     'attr': { 'class' : 'm-1 form-control'}
                    },{
                        label: 'name'
                    }) }}
                    
                    {{ form_row(registrationForm.email, { 
                     'attr': { 'class' : ' form-control'}
                    }, {
                        label : 'Email'
                    }) }}
                    
                    {{ form_row(registrationForm.plainPassword,  { 
                     'attr': { 'class' : ' m-1 form-control'}
                    },{
                        label: 'Password'
                        
                    }) }}

                    {{ form_row(registrationForm.agreeTerms) }}

                    <button class="btn btn-outline-light btn-lg px-4" type="submit">
                    Register
                    </button>
                {{ form_end(registrationForm) }}
            </form>
        </div>
        
{% endblock %}
