{% extends 'base.html.twig' %}
{% block title %}Series index{% endblock %}
{% block stylesheets %}
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link href="{{ asset('/css/register.css') }}" type="text/css" rel="stylesheet">  

{% endblock %}

{% block body %}
    {{ parent() }}
        <main class="text-center w-100 m-auto form-signin">
            <div class="row align-items-center boxShadowRegister">
                <h1 class="h3 mb-3 font-weight-normal text-light">Inscription</h1>
                <form method="post" class = "text-dark">
                    {{ form_start(registrationForm) }}
                        <div class="form-floating">
                            {{ form_widget(registrationForm.name, { 'attr': { 'class': 'form-control', 'id': 'floatingInput', 'placeholder': 'name@example.com' } }) }}
                            <label for="floatingInput">Nom</label>
                        </div>
                       <div class="form-floating">
                            {{ form_widget(registrationForm.email, { 'attr': { 'class': 'form-control', 'id': 'floatingInput', 'placeholder': 'name@example.com', 'pattern' : '[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$', 'title' : 'Veuillez entrer une adresse email valide' } }) }}
                            <label for="floatingInput">Adresse Mail</label>
                        </div>
                        <div class="form-floating">
                            {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'form-control', 'id': 'floatingInput' ,'placeholder': 'name@example.com'} }) }}
                            <label for="floatingInput">Mot de passe</label>
                        </div>
                        <div class="form-floating">
                        {{ form_widget(registrationForm.country, { 'attr': { 'class': 'form-select', 'id': 'floatingInput' ,'placeholder': 'Choissisez votre pays'} }) }}
                            <label for="floatingInput">Choissisez votre pays</label>
                        </div>
                        <div class="form-floating">
                            {{ form_row(registrationForm.captcha,  { 'attr': { 'class': 'form-control ', 'id': 'floatingInput' ,'placeholder': 'Captcha'},label_attr: {class: 'floatingInput text-danger'}}) }}
                        </div>
                        <button class="btn btn-outline-light btn-lg px-4" type="submit">
                        Inscription
                        </button>
                    {{ form_end(registrationForm) }}
                </form>
            </div>
        </main>

    
        
{% endblock %}
