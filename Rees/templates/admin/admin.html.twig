{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="{{ asset('/css/show.css') }}" type="text/css" rel="stylesheet">  
    <link href="{{ asset('/css/admin.css') }}" type="text/css" rel="stylesheet">  

{% endblock %}

{% block body %}
    <body class="">
    {{ parent()  }}
    {% if app.user %}
        {% if app.user.admin ==1 %}
        <main class="min-vh-100 d-flex flex-column align-items-center ">  
        <div class="Allinfo__filter ">            
            {% for user in users %}
                <div class="info__filter d-flex flex-row">
                    {% if user.name %} 
                    <h5 class="mb-3 mr-3">Name :</h5>
                    <p class="mb-3 mr-3 border-0">{{ user.name }}</p>
                    {% endif %}
                    {% if user.email %} 
                    <h5 class="mb-3 mr-3">E-mail :</h5>
                    <p class="mb-3 mr-3 border-0">{{ user.email }}</p>
                    {% endif %}
                    {% if user.country %} 
                        <h5 class="mb-3 mr-3" >Country  :</h5>
                        <p class="mb-3 mr-3 border-0">{{ user.country }}</p>
                    {% endif %}
                    {% if user.admin %} 
                        <h5 class="mb-3 mr-3">Admin : </h5>
                        <p class="mb-3 mr-3 border-0"> Administrateur</p>
                    {% else %}
                        <h5 class="mb-3 mr-3">Admin :</h5>
                        <p class="mb-3 mr-3 border-0"> Utilisateur</p>
                    {% endif %}
                    
               </div> 
            {% endfor %}
             </div> 
        </main>
            <footer>
            <div class="action" >
            <a href="{{ path('app_series_index') }}"> <b> Back to list </b> </a> <br>
            </div>
            </footer>
    {% else %}
