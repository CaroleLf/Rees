{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="{{ asset('/css/admin.css') }}" type="text/css" rel="stylesheet">  
{% endblock %}
{% block body %}
    {{ parent() }}  
    
{% if app.user %}
        {% if app.user.admin ==1 %}
            <form class="searchBar text-white d-flex flex-row align-items-center "  method="get" action="{{ path('app_user_search' ) }}">
                <div class="d-flex flex-column align-items-center">
                    <label class="m-2">Adresse Mail de l'utilisateur : </label>
                    <input class="form-control w-auto m-2" type="text" name="mailAdress"  placeholder="Adresse Mail">
                </div>
                <div class="d-flex flex-column align-items-end mt-4">
                    <button type="submit" class="btn btn-primary mt-3 "> Recherche </button>
                </div>
            </form>
        <main class="min-vh-100 d-flex flex-column align-items-center "> 
            <div class="Allinfo__filter ">   
                <table class="table table-striped">
                    <thead class="thead-light">
                        <tr class="border-0">
                            <th class="border-0 min-vw-20">Id</th>
                            <th class="border-0 min-vw-20">Nom</th>
                            <th class="email border-0 ">Email</th>
                            <th class="border-0 min-vw-30">Date inscription</th>
                            <th class="border-0 min-vw-20">Admin</th>
    
                            <th class="border-0 min-vw-20 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            {% if  user.id %}
                            <td class="border-0 min-vw-30" >{{ user.id }}</td>
                            {% endif %}
                            {% if  user.name %}
                            <td class="border-0 min-vw-20">{{ user.name }}</td>
                            {% else %}
                            <td class="border-0 min-vw-20"> N/A </td>   
                            {% endif %}
                            {% if  user.email %}
                            <td class="email border-0 w-60">{{ user.email }}</td>
                            {% else %}
                            <td class="border-0 min-vw-20"> N/A </td>   
                            {% endif %}
                            {% if  user.registerDate %}
                            <td class="border-0 min-vw-30">{{ user.registerDate ? user.registerDate|date('Y-m-d H:i:s') : '' }}</td>
                            {% else %}
                            <td class="border-0 min-vw-20"> N/A </td>   
                            {% endif %}
                            <td class="border-0 min-vw-20">{{ user.admin ? 'Yes' : 'No' }}</td>  
                            <td class="border-0 min-vw-20 inline-block inlineButton" colspan="3">
                                {% if not user.admin %}
                                <a class="btn btn-outline-light btn-lg px-4" href="{{ path('app_welcome', {'_switch_user' : user.email }) }} " role='button'>Incarner</a>
                                {% endif %}
                                <a class="btn btn-outline-light btn-lg px-4" href="{{ path('app_user_show', {'id': user.id}) }}" role='button'>Voir</a>
                                <a class="btn btn-outline-light btn-lg px-4" href="{{ path('app_user_edit', {'id': user.id}) }}" role='button'>Editer</a>
                             </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">Aucun utilisateur trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {{ knp_pagination_render(users) }}
            </div>
        </main>
        {% else %}
            <main class="h-100 m-5 d-flex align-items-center">
                <h1> ⚠️ ERREUR  :  Vous n'êtes pas administrateur ⚠️</h1>
            </main >
        {% endif %}
    {% endif %}
{% endblock %}
