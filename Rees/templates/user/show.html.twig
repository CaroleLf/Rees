                                <td class="border-0 text-center">{{ rate.value|number_format(1)}}</td>
                                <td class="border-0 text-center">{{ rate.comment }}</td>
                                <td class="border-0 text-center">{{ rate.date ? rate.date|date('Y-m-d H:i:s') : '' }}</td>            
