<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/pagination.css') }}">
        {% endblock %}
    {% if maxPages > 1 %}
         <ul class="laPage pagination pagination-sm">
        {# `«` arrow  #}
            {% if thisPage >= 4 %}
            <li class="page-item">
                <a class="page-link" href="{{ path('app_series_index', {page: 1}) }}" style="color:black;"><<</a>
            </li>
            {% endif %}
            {% if thisPage > 1 %}
            <li class="page-item">
                <a class="page-link" href="{{ path('app_series_index', {page: thisPage-1 < 1 ? 1 : thisPage-1}) }}"  style="color:black;"><</a>
            </li>
            {% endif %}
            {# Render each page number #}
            {% if thisPage == 1 %}
                {% for i in thisPage .. thisPage + 4 %}
                    <li class="page-item" {{ thisPage == i ? 'class=" page-item active"' }}>
                        <a class="page-link" href="{{ path('app_series_index', {page: i}) }}" style="color:black;">{{ i }}</a>
                    </li>
                {% endfor %}
            {% elseif thisPage == 2 %}
                {% for i in thisPage - 1 .. thisPage + 3 %}
                    <li class="page-item" {{ thisPage == i ? 'class=" page-item active"' }}>
                        <a class="page-link" href="{{ path('app_series_index', {page: i}) }}" style="color:black;">{{ i }}</a>
                    </li>
                {% endfor %}
            {% elseif thisPage == maxPages %}
                {% for i in thisPage - 4 .. thisPage %}
                    <li class="page-item" {{ thisPage == i ? 'class="page-item active"' }}>
                        <a class="page-link" href="{{ path('app_series_index', {page: i}) }}" style="color:black;">{{ i }}</a>
                    </li>
                {% endfor %}
            {% elseif thisPage == maxPages - 1 %}
                {% for i in thisPage - 3 .. thisPage + 1 %}
                    <li class="page-item" {{ thisPage == i ? 'class="page-item active"' }}>
                        <a class="page-link" href="{{ path('app_series_index', {page: i}) }}" style="color:black;">{{ i }}</a>
                    </li>
                {% endfor %}
            {% else %}
                {% for i in thisPage - 2 .. thisPage + 2%}
                    <li class="page-item" {{ thisPage == i ? 'class="page-item active"' }}>
                        <a class="page-link" href="{{ path('app_series_index', {page: i}) }}" style="color:black;">{{ i }}</a>
                    </li>
                {% endfor %}
            {% endif %}
            {% if thisPage < maxPages %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('app_series_index', {page: thisPage+1 <= maxPages ? thisPage+1 : thisPage}) }}" style="color:black;">></a>
                </li>
            {% endif %}
            {# `»` arrow #}
            {% if thisPage <= 19 %}
                <li class="page-item">
                    <a class="page-link" href="{{ path('app_series_index', {page: maxPages}) }}" style="color:black;">>></a>
                </li>
            {% endif %}
        </ul>
        {% endif %}
</html>

