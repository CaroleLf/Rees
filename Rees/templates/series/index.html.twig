{% extends 'base.html.twig' %}

{% block title %}Series index{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('/css/welcome.css') }}" type="text/css" rel="stylesheet">  
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
	<link rel="shortcut icon" href="img/logo.png" >
	<link href='https://css.gg/css' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
	<link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
	<script src="https://kit.fontawesome.com/2b4594a491.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Permanent+Marker&family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    
           
{% endblock %}
{% block body %}
    {{ parent() }}
     <main class="d-flex">
        <h1 class="societyName">Rees</h1>  
        {% if app.user %}
            <h2 class="welcome">Welcome {{app.user.name}}, take a sit and enjoy your favorite series</h2>
        {% else %}
            <h2 class="welcome">Welcome on the best stream site that you can found on the world wide web.</h2>
        {% endif %}
    </main>
    <div class="scroll-down">
		<a href="#" class="text-white text-decoration-none"><i class="ri-arrow-down-s-fill"></i></a>
	</div>
         <div class="work_container container grid"> 
            {% for serie in series %}
                <div class="series__filter">
                    {% if app.user %}
                        <td> <a href="{{ path('app_series_show', {'id': serie.id}) }}"><img src="{{ path('app_poster',{'id':serie.id}) }}"></a></td>
                    {% else %}
                       <td> <img src="{{ path('app_poster',{'id':serie.id}) }}"></td>
                    {% endif %}
                </div>
                
            
        {% else %}
                <td colspan="11">no records found</td>
        {% endfor %}
        </div>
        
    <div class="pag text-white text-decoration-none">
    {{ knp_pagination_render(series) }}
    </div>
{% endblock %}