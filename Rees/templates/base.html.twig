

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="{{ asset('/css/base.css') }}" type="text/css" rel="stylesheet">  
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
        
        <div class="scrollbar"></div>
	    <div class="clickScrollbar"></div>
        <header class="d-flex text-white">
            <h1 class="navlist font-weight-bold">Rees</h1>
             <ul class="navlist d-flex m-3 p-2">
			    <li><a href="{{ path('app_series_index') }}"  class ="text-white text-decoration-none"> Home</a></li>
            {% if app.user %}
                {% if app.user.admin == 0 %}
                <li><a href="../index.html#work"  class ="text-white text-decoration-none "> My Series</a></li>
                <li><a href="{{ path('app_logout') }} "  class ="text-white text-decoration-none ">Sign out</a></li>
                {% else %}
                <li><a href="../index.html#work"  class ="text-white text-decoration-none "> My Series</a></li>
                <li><a href="{{ path('app_admin')}}"  class ="text-white text-decoration-none "> List Users</a></li>
                <li><a href="{{ path('app_logout') }} "  class ="text-white text-decoration-none ">Sign out</a></li>
                {% endif %}
            {% else %}
			    <li><a href="{{ path('app_register') }}" class ="text-white text-decoration-none">Sign up</a></li>
			    <li><a href="{{ path('app_login') }}"  class ="text-white text-decoration-none ">Sign in</a></li>
             {% endif %}
        </header>
        {% endblock %}
    </body>
</html>

